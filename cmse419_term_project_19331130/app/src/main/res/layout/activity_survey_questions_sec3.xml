<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".surveyQuestions_sec_3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="62dp"
        android:background="#CC0000"
        android:gravity="center"
        android:text="YOUR LEVEL OF PHYSICAL ACTIVITY AND WHAT YOU EAT CAN AFFECT YOUR RISK OF DEVELOPING DIABETES."
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="396dp"
        android:layout_height="651dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/qwdcwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5) Do you usually do some physical activity such as brisk walking for at least 30 minutes each day?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonq51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButtonq52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/q4sdsdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6) How often do you eat vegetables or fruits?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonq61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every day"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButtonq62"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not every day"
                android:textSize="12sp" />

        </RadioGroup>

        <Button
            android:id="@+id/buttons3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#cc0000"
            android:text="Continue"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>